{
  "version": 2,
  "build": {
    "env": {
      "PYTHON_VERSION": "3.12"
    }
  },
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "api/health.py",
      "use": "@vercel/python"
    },
    {
      "src": "api/auth-google.py",
      "use": "@vercel/python"
    },
    {
      "src": "api/galleries-register-image.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/auth/google",
      "dest": "/api/auth-google.py"
    },
    {
      "src": "/api/galleries/([^/]+)/register-image",
      "dest": "/api/galleries-register-image.py?gallery_id=$1"
    },
    {
      "src": "/api/?",
      "dest": "/api/health.py"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/frontend/assets/$1"
    },
    {
      "src": "/(.*\\.(?:js|css|json|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot))",
      "dest": "/frontend/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/index.html"
    }
  ]
}
